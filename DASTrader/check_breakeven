if ( $mprice_bid <= $mybreakeven_safety ) {
    if ( $stop == 1 ) {
        if ( $mybreakeven_set == 0 ) {
            DrawHorzLineWithPrice($mybreakeven_safety,color("green"));
        }
    }
    } else {
    if ( $stop == 1 ) {
        if ( $mybreakeven_set == 0 ) {
            ExecHotkey("BreakEven");
        }
    }
}